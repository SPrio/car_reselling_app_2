<% unless @cities.nil? %>
  <h1>List of Cities</h1>
  <table class="table table-bordered">
    <thead class="thead-light text-center">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col" colspan="2">options</th>
      </tr>
    </thead>
    <tbody class="text-center">  
      <% @cities.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.name %></td>
          <td><%= link_to 'Edit', '', class: "btn btn-info" %></td>
          <td><%= link_to 'Delete', '', class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class= "jumbotron">
    <h1>No City is cuurently added to your DB,</h1>
    <p>Go to Add new and new city names, then it will show up in the list</p>
  </div>
<% end %>
