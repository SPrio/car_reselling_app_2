<h1>Show Quotation</h1>
<% if current_user.category == "Seller" %>
	<%= link_to "Back", user_car_path( current_user, @car ) , class: "btn btn-secondary back-button" %>
<% else %>
	<%= link_to "Back", view_user_car_path( current_user, @car ) , class: "btn btn-secondary back-button" %>
<% end %>
<h3 class="text-center">Enter your phone number to show the car quotation</h3>
<br>
<div class="row justify-content-center">
  <div class="col-sm-5">
    <%= form_tag({ controller: "cars", action: "quotation" }, method: :get ) do %>
    <div class="form-group">
      <%= text_field_tag :number, params[:number], placeholder: "Enter your number", class: "form-control" %>
    </div>
    <%= submit_tag "Show quotation", class: "btn btn-success"%>
    <% end %>
  </div>
</div>
<br>
<% if @price %>
  <div class="card-header text-center border">The price of the car is: <%= @price%></div>
<% end %>